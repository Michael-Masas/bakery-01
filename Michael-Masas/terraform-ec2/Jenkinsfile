pipeline {
	    parameters {
        choice(name: 'AWS Region', choices: ['us-east-1', 'us-east-2', 'us-west-1', 'us-west-2'], description: 'Pick a Region to Deploy')
    }
agent any
  stages {
    stage('Create Source') {
      steps {
        sh 'git clone "https://github.com/Michael-Masas/bakery-01.git"'
      }
	}
        stage('Terraform Init') {
          steps {
            sh 'terraform init'
      	  }
      }
        stage('Terraform Plan') {
          steps {

            sh 'terraform plan'
          }
      }
     }
    }
