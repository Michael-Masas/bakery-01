pipeline {
	    parameters {
        choice(name: 'AWS Region', choices: ['us-east-1', 'us-east-2', 'us-west-1', 'us-west-2'], description: 'Pick a Region to Deploy')
    }
agent any
  stages {
    stage('Create Source') {
      steps {
        sh 'rm -rf /tmp/source && cd /tmp && mkdir source'
        sh 'cd /tmp/source && git clone "https://github.com/Michael-Masas/bakery-01.git"'
      }
	}
        stage('Terraform Init') {
          steps {
            sh 'terraform init /tmp/source/bakery-01/Michael-Masas/terraform-ec2/'
      	  }
      }
        stage('Terraform Plan') {
          steps {
            sh 'terraform plan /tmp/source/bakery-01/Michael-Masas/terraform-ec2/'
          }
      }
     }
    }
